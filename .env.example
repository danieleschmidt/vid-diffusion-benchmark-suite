# =============================================================================
# Video Diffusion Benchmark Suite - Environment Configuration
# =============================================================================

# =============================================================================
# Core Application Settings
# =============================================================================

# Environment mode (development, testing, production)
ENVIRONMENT=development

# Application logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Base directory for storing model weights and datasets
DATA_DIR=./data

# Results output directory
RESULTS_DIR=./results

# Temporary files directory
TEMP_DIR=./tmp

# =============================================================================
# Model Configuration
# =============================================================================

# Default model precision (fp32, fp16, bf16)
DEFAULT_PRECISION=fp16

# Enable model compilation for optimization (true/false)
ENABLE_TORCH_COMPILE=true

# Model compilation mode (default, reduce-overhead, max-autotune)
TORCH_COMPILE_MODE=reduce-overhead

# Maximum VRAM allocation per model (in GB)
MAX_VRAM_PER_MODEL=24

# Model cache directory
MODEL_CACHE_DIR=./cache/models

# =============================================================================
# Hardware Configuration
# =============================================================================

# CUDA device ID (0, 1, 2, etc. or 'auto' for automatic selection)
CUDA_DEVICE=auto

# Enable mixed precision training (true/false)
ENABLE_MIXED_PRECISION=true

# GPU memory fraction to reserve (0.1-1.0)
GPU_MEMORY_FRACTION=0.9

# Number of workers for data loading
NUM_WORKERS=4

# =============================================================================
# Benchmark Configuration
# =============================================================================

# Default number of frames for video generation
DEFAULT_NUM_FRAMES=25

# Default frames per second
DEFAULT_FPS=7

# Default video resolution (format: WIDTHxHEIGHT)
DEFAULT_RESOLUTION=576x1024

# Default guidance scale for generation
DEFAULT_GUIDANCE_SCALE=7.5

# Number of inference steps
DEFAULT_NUM_INFERENCE_STEPS=50

# Random seed for reproducible results (set to -1 for random)
RANDOM_SEED=42

# Number of evaluation runs per prompt for statistical accuracy
NUM_EVALUATION_RUNS=3

# =============================================================================
# API Configuration
# =============================================================================

# API server host
API_HOST=0.0.0.0

# API server port
API_PORT=8000

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# API authentication required (true/false)
API_AUTH_REQUIRED=false

# API key for authentication (generate with: openssl rand -hex 32)
# API_KEY=your_api_key_here

# =============================================================================
# Database Configuration
# =============================================================================

# Database URL for storing evaluation results
# Examples:
# SQLite: sqlite:///./benchmark_results.db
# PostgreSQL: postgresql://user:password@localhost:5432/vid_benchmark
# MySQL: mysql://user:password@localhost:3306/vid_benchmark
DATABASE_URL=sqlite:///./benchmark_results.db

# Database connection pool size
DB_POOL_SIZE=10

# Database connection timeout (seconds)
DB_TIMEOUT=30

# =============================================================================
# Model API Keys (for commercial models)
# =============================================================================

# Pika Labs API configuration
# PIKA_API_KEY=your_pika_api_key_here
# PIKA_API_BASE_URL=https://api.pika.art

# Runway ML API configuration
# RUNWAY_API_KEY=your_runway_api_key_here
# RUNWAY_API_BASE_URL=https://api.runway.ml

# Stability AI API configuration
# STABILITY_API_KEY=your_stability_api_key_here
# STABILITY_API_BASE_URL=https://api.stability.ai

# =============================================================================
# Monitoring and Observability
# =============================================================================

# Prometheus metrics endpoint
PROMETHEUS_PORT=9090

# Enable metrics collection (true/false)
ENABLE_METRICS=true

# Metrics collection interval (seconds)
METRICS_INTERVAL=15

# Grafana dashboard URL
GRAFANA_URL=http://localhost:3000

# =============================================================================
# Weights & Biases (W&B) Configuration
# =============================================================================

# W&B project name
# WANDB_PROJECT=vid-diffusion-benchmark

# W&B entity (team/username)
# WANDB_ENTITY=your_wandb_entity

# W&B API key
# WANDB_API_KEY=your_wandb_api_key

# Enable W&B logging (true/false)
ENABLE_WANDB=false

# =============================================================================
# Cloud Storage Configuration
# =============================================================================

# AWS S3 configuration
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_DEFAULT_REGION=us-east-1
# S3_BUCKET_NAME=vid-benchmark-results

# Google Cloud Storage configuration
# GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json
# GCS_BUCKET_NAME=vid-benchmark-results

# Azure Blob Storage configuration
# AZURE_STORAGE_CONNECTION_STRING=your_azure_connection_string
# AZURE_CONTAINER_NAME=vid-benchmark-results

# =============================================================================
# Notification Configuration
# =============================================================================

# Slack webhook for notifications
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# Discord webhook for notifications
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR/DISCORD/WEBHOOK

# Email SMTP configuration
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# EMAIL_FROM=vid-benchmark@yourdomain.com
# EMAIL_TO=admin@yourdomain.com

# =============================================================================
# Security Configuration
# =============================================================================

# JWT secret key for API authentication
# JWT_SECRET_KEY=your_jwt_secret_key_here

# Token expiration time (hours)
JWT_EXPIRATION_HOURS=24

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8501

# =============================================================================
# Performance Tuning
# =============================================================================

# Enable memory profiling (true/false)
ENABLE_MEMORY_PROFILING=false

# Enable performance profiling (true/false)
ENABLE_PERFORMANCE_PROFILING=false

# Profile output directory
PROFILE_OUTPUT_DIR=./profiles

# Garbage collection frequency (seconds, 0 to disable)
GC_FREQUENCY=300

# =============================================================================
# Development Settings
# =============================================================================

# Enable development mode features (true/false)
DEBUG_MODE=false

# Enable auto-reloading of code changes (true/false)
AUTO_RELOAD=false

# Enable detailed error traces (true/false)
DETAILED_ERRORS=false

# Mock external API calls for testing (true/false)
MOCK_EXTERNAL_APIS=false

# =============================================================================
# Container Configuration
# =============================================================================

# Docker registry for model containers
DOCKER_REGISTRY=ghcr.io/danieleschmidt/vid-diffusion-benchmark

# Container resource limits
CONTAINER_MEMORY_LIMIT=32G
CONTAINER_CPU_LIMIT=8
CONTAINER_GPU_LIMIT=1

# Container network name
CONTAINER_NETWORK=vid-benchmark-net

# =============================================================================
# Benchmark Suite Specific Settings
# =============================================================================

# Standard prompt sets to use (comma-separated)
# Options: diverse_v2, motion_dynamics, scene_transitions, camera_movements, edge_cases
PROMPT_SETS=diverse_v2,motion_dynamics

# Enable temporal consistency evaluation (true/false)
ENABLE_TEMPORAL_EVALUATION=true

# Enable motion quality evaluation (true/false)
ENABLE_MOTION_EVALUATION=true

# Enable hardware profiling during evaluation (true/false)
ENABLE_HARDWARE_PROFILING=true

# Maximum evaluation time per model (seconds)
MAX_EVALUATION_TIME=1800

# Automatically cleanup temporary files (true/false)
AUTO_CLEANUP=true

# =============================================================================
# Note: Copy this file to .env and customize the values for your environment
# Never commit .env files with actual secrets to version control!
# =============================================================================