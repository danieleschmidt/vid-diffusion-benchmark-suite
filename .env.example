# Video Diffusion Benchmark Suite Environment Configuration

# ==============================================================================
# CORE CONFIGURATION
# ==============================================================================

# Environment (development, staging, production)
VID_BENCH_ENV=development

# Logging configuration
VID_BENCH_LOG_LEVEL=INFO
VID_BENCH_LOG_FORMAT=json

# ==============================================================================
# HARDWARE CONFIGURATION
# ==============================================================================

# Device configuration
CUDA_VISIBLE_DEVICES=0
VID_BENCH_DEVICE=auto  # auto, cuda, cpu
VID_BENCH_MAX_GPU_MEMORY=0.9  # Fraction of GPU memory to use

# Performance settings
VID_BENCH_MAX_WORKERS=2
VID_BENCH_BATCH_SIZE=1
VID_BENCH_ENABLE_MEMORY_PROFILING=true

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================

# PostgreSQL settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=vid_bench
POSTGRES_USER=vid_bench
POSTGRES_PASSWORD=vid_bench_dev

# Database connection pool
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10

# ==============================================================================
# CACHE CONFIGURATION
# ==============================================================================

# Redis settings
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Cache settings
CACHE_TTL=3600  # 1 hour
CACHE_MODEL_WEIGHTS=true
CACHE_RESULTS=true

# ==============================================================================
# STORAGE CONFIGURATION
# ==============================================================================

# Model storage
MODEL_CACHE_DIR=./models
MODEL_REGISTRY_URL=https://huggingface.co
MODEL_DOWNLOAD_TIMEOUT=300

# Results storage
RESULTS_DIR=./results
BACKUP_RESULTS=true
BACKUP_RETENTION_DAYS=30

# Temporary files
TEMP_DIR=/tmp/vid_bench
CLEANUP_TEMP_FILES=true

# ==============================================================================
# API CONFIGURATION
# ==============================================================================

# API server settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_TIMEOUT=300

# Authentication (if enabled)
API_KEY=
JWT_SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# Rate limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# ==============================================================================
# DASHBOARD CONFIGURATION
# ==============================================================================

# Streamlit dashboard
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8501
DASHBOARD_THEME=light

# Dashboard features
ENABLE_MODEL_UPLOAD=false
ENABLE_LIVE_MONITORING=true
ENABLE_COMPARISON_TOOLS=true

# ==============================================================================
# MONITORING CONFIGURATION
# ==============================================================================

# Prometheus metrics
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9000
PROMETHEUS_METRICS_PATH=/metrics

# Grafana dashboard
GRAFANA_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Application monitoring
ENABLE_PROFILING=true
ENABLE_TRACING=false
TRACE_SAMPLE_RATE=0.1

# Health checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10

# ==============================================================================
# BENCHMARK CONFIGURATION
# ==============================================================================

# Default benchmark settings
DEFAULT_NUM_FRAMES=16
DEFAULT_FPS=8
DEFAULT_RESOLUTION=512x512
DEFAULT_NUM_INFERENCE_STEPS=25

# Quality metrics
ENABLE_FVD=true
ENABLE_IS=true
ENABLE_CLIP_SIMILARITY=true
ENABLE_TEMPORAL_CONSISTENCY=true

# Evaluation settings
EVALUATION_TIMEOUT=600  # 10 minutes
MAX_CONCURRENT_EVALUATIONS=2
AUTO_SAVE_RESULTS=true

# ==============================================================================
# MODEL CONFIGURATION
# ==============================================================================

# Hugging Face Hub
HF_TOKEN=
HF_CACHE_DIR=~/.cache/huggingface

# Model-specific settings
SVD_PRECISION=fp16
SVD_ENABLE_CPU_OFFLOAD=true
SVD_ENABLE_ATTENTION_SLICING=true

# Mock models (for testing)
ENABLE_MOCK_MODELS=true
MOCK_MODEL_LATENCY=1.0

# ==============================================================================
# SECURITY CONFIGURATION
# ==============================================================================

# CORS settings
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8501
CORS_METHODS=GET,POST,PUT,DELETE
CORS_HEADERS=*

# Security headers
SECURITY_HEADERS_ENABLED=true

# File upload security
MAX_UPLOAD_SIZE=100MB
ALLOWED_EXTENSIONS=.mp4,.avi,.mov,.json

# ==============================================================================
# DEVELOPMENT CONFIGURATION
# ==============================================================================

# Development tools
ENABLE_DEBUG_MODE=true
ENABLE_AUTO_RELOAD=true
ENABLE_PROFILER_UI=true

# Testing
TEST_DATABASE_URL=sqlite:///test.db
TEST_TIMEOUT=60
PYTEST_MARKERS=slow,integration,unit

# Code quality
BLACK_LINE_LENGTH=88
ISORT_PROFILE=black
PYLINT_RCFILE=.pylintrc

# ==============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# ==============================================================================

# VID_BENCH_ENV=production
# VID_BENCH_LOG_LEVEL=WARNING
# ENABLE_DEBUG_MODE=false
# ENABLE_AUTO_RELOAD=false
# API_WORKERS=4
# DB_POOL_SIZE=20
# RATE_LIMIT_ENABLED=true